.user-container {
  color: #888888;
}

.user-card {
  margin: 200rpx auto 0;
  width: 80%;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 8rpx 0 #cccccc;
  background-color: #ffffff;
}

.user-info {
  display: flex;
  align-items: center;
  padding: 40rpx 20rpx;
}

.user-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.user-nickname {
  margin-left: 30rpx;
}

.login-btn {
  margin-top: 60rpx;
}

.menu {
  margin: 60rpx auto 0;
  width: 80%;
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
  align-items: stretch;
}

.menu-item {
  width: 100%;
  line-height: 80rpx;
}


input {
  outline: none;
  border: none;
  list-style: none;
}

button {
  background: inherit;
  padding: 0;
  font-weight: inherit;
  font-size: inherit;
  color: inherit;
  text-align: left;
}

button:focus {
  outline: 0;
}

button::after {
  border: none;
}